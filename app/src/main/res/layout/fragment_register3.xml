<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Register3Fragment">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/line"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view"
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/reg_button"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="84dp"
        android:fontFamily="sans-serif-medium"
        android:text="Choose the Book Genre You like❤"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="Select your preferred book genre for better recommendations, or you can skip it."
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <LinearLayout
        android:id="@+id/genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/genre1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Romance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/genre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantasy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/genre3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horror"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/genre4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mystery"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/genre5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Psychology"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/genre6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sci-Fi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/genre7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thriller"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginStart="5dp"/>
            <TextView
                android:id="@+id/genre8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adventure"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/genre9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Art &amp; Photography"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/genre10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food &amp; drink"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/outline"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColor="#F79200"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genres">
        <Button
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/skip"
            android:fontFamily="sans-serif-medium"
            android:text="Skip"
            android:layout_weight="1"
            android:textColor="#F79200"
            android:textSize="16sp"
            android:layout_marginEnd="7dp"/>
    <Button
        android:id="@+id/reg3Cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_button"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:text="Continue"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>